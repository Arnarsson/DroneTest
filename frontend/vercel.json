{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "../api/index.py": {
      "runtime": "python@3.11",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "../api/index.py"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "/api"
  }
}